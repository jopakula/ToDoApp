<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/categoriesMenu_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/categoriesMenu_open_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toStartOf="@id/categoriesMenu_closed_tv"
        app:layout_constraintStart_toEndOf="@id/categoriesMenu_all_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/categoriesMenu_closed_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Closed"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toStartOf="@id/categoriesMenu_archived_tv"
        app:layout_constraintStart_toEndOf="@id/categoriesMenu_open_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/categoriesMenu_archived_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Archived"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>